<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FadingHorizontalScrollView">
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">@dimen/edge_margin</item>
        <item name="android:fillViewport">false</item>
        <item name="android:requiresFadingEdge">horizontal</item>
    </style>

    <style name="FrequencyButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_5dp_ffffff_sb</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/edge_margin</item>
    </style>

    <style name="CalendarTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@android:drawable/ic_menu_my_calendar</item>
        <item name="android:padding">@dimen/edge_margin</item>
        <item name="android:background">@drawable/border_5dp_ffffff_sb</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginTop">@dimen/smaller_margin</item>
    </style>

</resources>
